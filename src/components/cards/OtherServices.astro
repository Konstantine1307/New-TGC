---
import { Image } from "astro:assets";
import Title from "@components/elements/Title.astro";

import hostfullyLogo from '@assets/images/Hosfully-logo.webp';
import welcomePack from '@assets/images/welcome-pack.webp';
import groceryShop from '@assets/images/supermarket-shopping.webp';
---


<div
    class='py-6 bg-gray-100 shadow-lg shadow-gray-50 dark:bg-gray-900 dark:shadow-gray-800 rounded-2xl'
>
    <Title text='Other Services' variant='h3' className='text-center' />
    <div class='flex flex-row justify-around mt-6'>
        <div class='rounded-xl'>
            <Image
                src={hostfullyLogo}
                alt='Hostfully Logo'
                width='80'
                height='80'
                class='rounded-xl'
            />
        </div>
        <div class='flex flex-col space-y-2 w-2/3'>
            <p class='text-heading-1 text-lg text-center'>
                Information & Guidebook
            </p>
            <p class='text-subheading text-center'>
                Online and printed versions available.
            </p>
        </div>
    </div>
    <div class='flex flex-row justify-around mt-6'>
        <div class='rounded-xl'>
            <Image
                src={welcomePack}
                alt='Welcome Pack basket'
                width='80'
                height='80'
                class='rounded-xl'
            />
        </div>
        <div class='flex flex-col space-y-2 w-2/3'>
            <p class='text-heading-1 text-lg text-center'>Welcome Pack</p>
            <p class='text-subheading text-center'>
                Welcome Pack includes the essential to start your stay.
            </p>
        </div>
    </div>
    <div class='flex flex-row justify-around mt-6'>
        <div class='rounded-xl'>
            <Image
                src={groceryShop}
                alt='Welcome Pack basket'
                width='80'
                height='80'
                class='rounded-xl'
            />
        </div>
        <div class='flex flex-col space-y-2 w-2/3'>
            <p class='text-heading-1 text-lg text-center'>Grocery Shopping</p>
            <p class='text-subheading text-center'>
                Shopping delivery available.
            </p>
        </div>
    </div>
</div>
