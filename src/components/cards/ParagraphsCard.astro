---
import Paragraph from '../elements/Paragraph.astro';
import Headings from '../elements/Headings.astro';

import type { Props as ParagraphProp } from '../elements/Paragraph.astro';

type Props = {
  paragraphs: ParagraphProp[];
  headingText: string;
  className?: string;
};

const { paragraphs, headingText, className } = Astro.props;
---

<div class=`midmd:pr-12 space-y-8 max-w-2xl mx-auto lg:ms-0 mt-12 midmd:mt-24 ${className}`>
  <Headings text={headingText} variant='h2' className='text-start' />
  {paragraphs.map((paragraph) => <Paragraph {...paragraph} />)}
</div>
