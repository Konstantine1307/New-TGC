---
import Button from '@components/elements/Button.astro';
import Paragraph from '@components/elements/Paragraph.astro';
import Title from '@components/elements/Title.astro';
import HeroTitle from '@components/elements/HeroTitle.astro';
import HeroContainer from '@components/elements/HeroContainer.astro';
import Subheading from '@components/elements/Subheading.astro';

export interface Props {
  styleUrl?: string;
  paragraph: string;
  title: string;
  btnText: string;
  btnHref: string;
  subheading: string;
  bannerTitle: string;
  bannerBtnText: string;
}

const {
  styleUrl,
  paragraph,
  title,
  btnText,
  btnHref,
  subheading,
  bannerTitle,
  bannerBtnText,
} = Astro.props;
---

<section
  class='header relative h-full max-h-[800px] flex flex-col bg-cover bg-no-repeat bg-center'
  style=`background-image: url("${styleUrl}");`
>
  <div
    class='text-container relative flex flex-col items-center text-center lg:text-center py-60 lg:max-w-3xl max-w-3xl mx-auto lg:flex-1'
  >
    <Paragraph className='my-8 uppercase font-medium dark hero-text-shadow'
      text={paragraph}
 />
    <HeroTitle text={title} />

    <div class='mt-10'>
      <a href={btnHref}>
        <Button className={'min-w-max text-white'}>
          <span class='flex relative z-[5]'> {btnText}</span>
        </Button>
      </a>
    </div>
  </div>
  <div class='absolute -bottom-24 left-0 right-0 pb-0 z-10 mx-4'>
    <HeroContainer 
      className='border-b-2 dark:border-b-0 border-box-border shadow-2xl shadow-box-shadow rounded-lg'
    >
      <div
        class='p-5 py-3 rounded-md grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-8 md:gap-6 lg:gap-12'
      >
        <div class='text-center md:text-start md:ps-12 md:col-span-3'>
          <Subheading text={subheading} />
          <Title
            text={bannerTitle}
            variant='h3'
            className='capitalize text-center'
          />
          <div class='mx-auto mt-3 text-center'>
            <a href='https://via.eviivo.com/TresowesTR13'>
              <Button className={'min-w-max text-white'}>
                <span class='flex relative z-[5]'> {bannerBtnText}</span>
              </Button>
            </a>
          </div>
        </div>
      </div>
    </HeroContainer>
  </div>
</section>

<style>
  /* Overlay */

  .header::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
  }

  .text-container {
    z-index: 10;
  }
  
</style>
