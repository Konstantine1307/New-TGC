---
export interface Props{
    text: string;
    className?:string;
    variant: "h1" | "h2" | "h3";
}

const { text, className, variant } = Astro.props

const headingSize = (variant: "h1" | "h2" | "h3") => {
    if (variant === "h1") {
        return `text-4xl/tight sm:text-5xl/tight md:text-6xl/tight xl:text-7xl/tight text-heading-1`
    } else if (variant === "h2") {
        return `text-4xl/tight  md:text-5xl/tight xl:text-6xl/tight text-heading-2`
    } else if (variant === "h3") {
        return `text-3xl/tight xl:text-4xl/tight text-heading-3`
    }

}
---



<p class={`font-serif ${headingSize(variant)} ${className}`}>
    {text}
</p>